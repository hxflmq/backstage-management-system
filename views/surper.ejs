<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>注册</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/register.css">
    <link rel="stylesheet" href="/stylesheets/login.css">
    <link rel="stylesheet" href="/stylesheets/surper.css">
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
</head>
<body>
    <form class="form-horizontal cont">
        <h1>超级用户登录</h1>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label">账号</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="text" placeholder="账号">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label">密码</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="pass" placeholder="密码">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="button" class="btn btn-primary btn-lg btn-success" id="btn1">
                   登录
                  </button>
            <button type="button" class="btn btn-primary btn-lg btn-danger" id="btn2">
                   超级用户登录
                  </button>
            <a href="register" id="tiao">还没账号?请先去注册</a>
          </div>
        </div>
        <div class="alreay log"></div>
      </form>
      <script>
         $(function(){
             $(".btn").on("click",function(e){
        //取值及阻止submit默认行为
                e.preventDefault();
                 $text = $("#text").val();
                 $pass = $("#pass").val();
                 if($text.length==5){               
                     //ajax请求数据
                     $.post("/users/login",{username:$text,password:$pass}).done((data)=>{
                          if(data==0){
                            $(".alreay").html("超级用户名或密码错误！");
                              function delay (){
                                 location.href="/surper";
                             }
                             setTimeout(delay,3000) 
                          }else{
                              location.href="/surperhome";
                          }  
                          console.log(data)
                            })
                 }else{
                    $(".alreay").html("超级用户名或密码错误！");
                              function delay (){
                                 location.href="/surper";
                             }
                             setTimeout(delay,3000) 
                 }
        })
         })
      
      </script>
</body>
</html>